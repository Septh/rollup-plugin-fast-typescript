{
  "name": "rollup-plugin-fast-typescript",
  "version": "1.1.0",
  "description": "A plugin that uses esbuild, swc or sucrase (you decide!) for blazing fast TypeScript transpilation, leaving the tree-shaking and bundling tasks to Rollup.",
  "author": "Stephan 'Septh' Schreiber <septh@sfr.fr>",
  "keywords": [
    "rollup",
    "plugin",
    "typescript",
    "esbuild",
    "swc",
    "sucrase",
    "transpile"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Septh/rollup-plugins/tree/main/plugins/fast-typescript#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Septh/rollup-plugins.git",
    "directory": "plugins/fast-typescript"
  },
  "bugs": "https://github.com/Septh/rollup-plugins/issues",
  "files": [
    "lib",
    "index.js",
    "index.d.ts",
    "!*.map"
  ],
  "engines": {
    "node": ">=16.19.0"
  },
  "type": "module",
  "exports": "./index.js",
  "types": "./index.d.ts",
  "imports": {
    "#self": {
      "types": "./index.d.ts"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build -- --configDist",
    "prebuild": "npm run clean",
    "clean": "rimraf index.js index.js.map lib",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "check": "tsc --noEmit --skipLibCheck",
    "changelog": "changelog"
  },
  "peerDependencies": {
    "@swc/core": "^1.3.100",
    "esbuild": ">=0.18.0",
    "rollup": "^4.0.0",
    "sucrase": "^3.35.0",
    "typescript": "^5.3.0"
  },
  "peerDependenciesMeta": {
    "@swc/core": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "sucrase": {
      "optional": true
    }
  },
  "dependencies": {
    "change-case": "^5.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@septh/changelog": "^1.0.0",
    "@swc/core": "^1.3.106",
    "esbuild": "^0.20.0",
    "sucrase": "^3.35.0"
  },
  "np": {
    "yarn": false,
    "clean": false
  }
}
